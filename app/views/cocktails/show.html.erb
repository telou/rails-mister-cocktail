<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
    <div>
      <h1><%= @cocktail.name %></h1>
    </div>
    <div>
      <p>Ingredients:</p>
    </div>

    <ul>

      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> of <%= dose.ingredient.name %></li>
        <%= link_to "Delete", dose_path(dose), method: :delete %>
         <% end %>

         <%#= link_to "Add to this cocktail", new_cocktail_dose_path(@dose) %>

    </ul>

    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.text_area :description %>
      <%= f.association :cocktail %>
      <%= f.association :ingredient %>
      <%= f.button :submit %>
    <% end %>
    </div>
  </div>
  <p><%= link_to "Back to list", root_path %></p>
</div>


