<div class="container">
  <div class="row justify-content-center">
    <div class="col-12">
    <div>
      <h1><%= @cocktail.name %></h1>
    </div>
    <div>
      <p>Ingredients:</p>
    </div>
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> of <%= dose.ingredient.name %></li>
        <%= link_to "Delete", dose_path(dose), method: :delete %>
         <% end %>
    </ul>

    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.button :submit %>
    <% end %>
    </div>
  </div>
  <p><%= link_to "Back", root_path %> | <%= link_to "Delete", cocktail_path(@cocktail), method: :delete %></p>
</div>


